<h1>Lists</h1>
<% @lists.each do |l| %>
  <div class="card my-3" style="width: 18rem;">
    <div class="card-title">
      <h3 class="m-2"><%= l.name %></h3>
    </div>
    <div class="card-body">
      <%= link_to "See details", list_path(l), class: "btn btn-primary my-2"%>
      <%= link_to "New Bookmark", new_list_bookmark_path(l), class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
